<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/bg_btn"/>-->
            <gradient android:startColor="@color/bg_btn_start"
                      android:centerColor="@color/bg_btn_center"
                      android:endColor="@color/bg_btn_end"
                      android:angle="@integer/gradient_angle_btn"/>

            <padding android:bottom="@dimen/padding_btn"
                     android:top="@dimen/padding_btn"
                     android:left="@dimen/padding_btn"
                     android:right="@dimen/padding_btn"/>

            <corners android:bottomLeftRadius="@dimen/corner_radius_bnt"
                     android:bottomRightRadius="0dp"
                     android:topLeftRadius="0dp"
                     android:topRightRadius="0dp"/>

            <!--<stroke android:color="@color/stroke_btn"-->
                    <!--android:width="@dimen/stroke_width" />-->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/bg_btn_pressed"/>-->

            <gradient android:startColor="@color/bg_btn_start"
                      android:endColor="@color/bg_btn_end"
                      android:angle="@integer/gradient_angle_btn_pressed"/>

            <padding android:bottom="@dimen/padding_btn"
                     android:top="@dimen/padding_btn"
                     android:left="@dimen/padding_btn"
                     android:right="@dimen/padding_btn"/>

            <corners android:bottomLeftRadius="@dimen/corner_radius_bnt"
                     android:bottomRightRadius="0dp"
                     android:topLeftRadius="0dp"
                     android:topRightRadius="0dp"/>

        </shape>
    </item>
</selector>