<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#337744" android:paddingLeft="8dp"
                android:paddingRight="8dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivAb" android:layout_centerVertical="true"
            android:src="@android:drawable/ic_search_category_default"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Bar"
            android:id="@+id/tvAb" android:layout_centerInParent="true" android:textColor="#fff"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB"
            android:id="@+id/btnAb" android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:textColor="#fff"/>
</RelativeLayout>