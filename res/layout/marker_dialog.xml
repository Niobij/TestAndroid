<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="1">

    <ImageView
            android:layout_width="@dimen/marker_image_size"
            android:layout_height="@dimen/marker_image_size"
            android:id="@+id/ivMarkerImage" android:background="@android:drawable/ic_menu_gallery"
            />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMarkerText" android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/ivMarkerImage"
            android:layout_alignBottom="@+id/ivMarkerImage" android:layout_alignParentEnd="true"/>
</RelativeLayout>